{
  "name": "@carforyou/next-page-bundlesize",
  "version": "0.0.0",
  "description": "Page-level bundlesize check for next.js",
  "scripts": {
    "version": "npm run build",
    "build": "rimraf pkg && tsc --outDir pkg/esm && tsc --module commonjs --target es5 --outDir pkg/cjs",
    "lint": "eslint --ext ts,js,tsx,jsx,json .",
    "format": "npm run lint -- --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carforyou/carforyou-next-page-bundlesize-pkg.git"
  },
  "author": "CAR FOR YOU",
  "license": "MIT",
  "homepage": "https://github.com/carforyou/carforyou-next-page-bundlesize-pkg#readme",
  "devDependencies": {
    "@babel/core": "7.16.7",
    "@carforyou/eslint-config": "4.0.3",
    "@types/jest": "27.4.0",
    "bytes": "3.1.1",
    "jest": "27.4.7",
    "rimraf": "3.0.2",
    "semantic-release": "17.4.7",
    "ts-jest": "27.1.2",
    "typescript": "4.5.4"
  },
  "dependencies": {
    "bundlesize": "0.18.1",
    "yargs": "17.3.1"
  },
  "bin" : { "next-page-bundlesize": "./pkg/cjs/index.js" },
  "main": "pkg/cjs/index.js",
  "module": "pkg/esm/index.js",
  "files": [
    "pkg/**/*"
  ]
}

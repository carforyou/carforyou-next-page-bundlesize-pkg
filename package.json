{
  "name": "@carforyou/next-page-bundlesize",
  "version": "0.0.0",
  "description": "Page-level bundlesize check for next.js",
  "scripts": {
    "version": "npm run build",
    "build": "rimraf pkg && tsc --outDir pkg",
    "lint": "eslint --ext ts,js,tsx,jsx,json .",
    "format": "npm run lint -- --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carforyou/carforyou-next-page-bundlesize-pkg.git"
  },
  "author": "CAR FOR YOU",
  "license": "MIT",
  "homepage": "https://github.com/carforyou/carforyou-next-page-bundlesize-pkg#readme",
  "devDependencies": {
    "@babel/core": "7.21.8",
    "@carforyou/eslint-config": "4.0.51",
    "@types/jest": "29.5.1",
    "bytes": "3.1.2",
    "jest": "29.5.0",
    "rimraf": "5.0.0",
    "semantic-release": "21.0.2",
    "ts-jest": "29.1.0",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "bundlesize": "0.18.1",
    "yargs": "17.7.2"
  },
  "bin" : {
    "next-page-bundlesize": "./pkg/index.js"
  },
  "files": [
    "pkg/**/*"
  ]
}
